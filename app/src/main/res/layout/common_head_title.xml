<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/good_detail_title_bg"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:id="@+id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/back_nomal"/>
    <TextView
        android:id="@+id/tvCommonTitle"
        android:layout_toRightOf="@id/ivBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="商品详情"
        android:textColor="#fff"
        android:textSize="15sp"
        android:paddingLeft="8dp"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/ivCartSelected"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_cart_selected" />
    <TextView
        android:id="@+id/tvCartText"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:text="3"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:gravity="center"
        android:textColor="#f00" />
    <ImageView
        android:id="@+id/ivCollectIn"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_collect_in"
        android:paddingRight="10dp"
        android:paddingLeft="5dp"
        android:paddingTop="5dp"/>
    <ImageView
        android:id="@+id/ivShareNor"
        android:paddingTop="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_share_nor"
        android:layout_alignParentRight="true"/>
</RelativeLayout>