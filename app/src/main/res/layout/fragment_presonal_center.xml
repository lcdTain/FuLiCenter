<LinearLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#dcd0d0"
    xmlns:android="http://schemas.android.com/apk/res/android">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/main_orange">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_icon_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/tb_icon_more_msg_white_56"
            android:layout_alignParentRight="true"
            android:paddingRight="5dp"
            android:paddingTop="5dp"/>
        <TextView
            android:id="@+id/tvSettings"
            android:text="设置"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_icon_white"
            android:paddingRight="20dp"
            android:paddingTop="7dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">
        <ImageView
            android:id="@+id/ivAvatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/contactlogo"
            android:layout_margin="10dp"/>
        <TextView
            android:id="@+id/tvUsername"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="lcd"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_toRightOf="@id/ivAvatar"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"/>
        <ImageView
            android:id="@+id/ivQrcode"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@drawable/tb_icon_home_qrcode_normal"
            android:layout_toRightOf="@id/tvUsername"
            android:layout_marginLeft="10dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#f15805">
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:paddingTop="10dp"
                android:id="@+id/tvGoodsColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@id/tvGoodsColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏的宝贝"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvHomeColumn"
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:layout_height="wrap_content"
                android:text="28"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@id/tvHomeColumn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="收藏的店铺"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"/>
        </RelativeLayout>
        <View
            android:layout_width="1dp"
            android:layout_height="30dp"
            android:background="#fff"
            android:layout_gravity="center"/>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="58"
                android:paddingTop="10dp"
                android:gravity="center"
                android:textSize="15sp"
                android:textColor="#fff"/>
            <TextView
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_below="@id/tvPlace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="我的足迹"
                android:textSize="15sp"
                android:textColor="#fff"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="5dp"
        android:background="#fff">
        <TextView
            android:id="@+id/tvMyDingDan"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="我的订单"
            android:paddingLeft="10dp"
            android:textSize="18sp"
            android:textColor="#000"
            android:gravity="center_vertical"/>
        <ImageView
            android:id="@+id/rvRight"
            android:layout_width="30dp"
            android:scaleType="centerInside"
            android:layout_height="match_parent" 
            android:layout_alignParentRight="true"
            android:src="@drawable/right_arrow_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查看全部已购宝贝"
            android:textColor="#000"
            android:textSize="13sp"
            android:layout_toLeftOf="@id/rvRight"
            android:gravity="center"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="horizontal"
        android:background="#fff"
        android:paddingTop="10dp">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" 
            android:src="@drawable/order_list1" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list2" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list3" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list4" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:src="@drawable/order_list5"/>
    </LinearLayout>
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginBottom="20dp">
     <RelativeLayout
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="我的卡卷包"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical" />
         <ImageView
             android:layout_width="30dp"
             android:layout_height="match_parent"
             android:scaleType="centerInside"
             android:src="@drawable/right_arrow_icon"
             android:layout_alignParentRight="true"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:drawablePadding="10dp"
             android:text="生活卷"
             android:drawableLeft="@drawable/center_card_coupon1"
             android:textSize="15sp"
             android:textColor="#000"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical" />
         <ImageView
             android:layout_width="30dp"
             android:layout_height="match_parent"
             android:scaleType="centerInside"
             android:src="@drawable/right_arrow_icon"
             android:layout_alignParentRight="true"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:drawablePadding="10dp"
             android:text="网店卷"
             android:drawableLeft="@drawable/center_card_coupon2"
             android:textSize="15sp"
             android:textColor="#000"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical" />
         <ImageView
             android:id="@+id/ivNetTicket"
             android:layout_width="30dp"
             android:layout_height="match_parent"
             android:scaleType="centerInside"
             android:src="@drawable/right_arrow_icon"
             android:layout_alignParentRight="true"/>
         <TextView
             android:layout_toLeftOf="@id/ivNetTicket"
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="暂无可用优惠卷"
             android:gravity="center_vertical"
             android:textSize="15sp"
             android:textColor="#000"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="2dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:drawablePadding="10dp"
             android:text="会员卡"
             android:drawableLeft="@drawable/center_card_coupon3"
             android:textSize="15sp"
             android:textColor="#000"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical" />
         <ImageView
             android:id="@+id/ivVipTicket"
             android:layout_width="30dp"
             android:layout_height="match_parent"
             android:scaleType="centerInside"
             android:src="@drawable/right_arrow_icon"
             android:layout_alignParentRight="true"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="一卡在手，逛店无忧"
             android:gravity="center_vertical"
             android:layout_toLeftOf="@id/ivVipTicket"
             android:textSize="15sp"
             android:textColor="#000"/>
     </RelativeLayout>
     <RelativeLayout
         android:layout_marginTop="10dp"
         android:layout_width="match_parent"
         android:layout_height="0dp"
         android:layout_weight="1"
         android:background="#fff">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="我的专享特权"
             android:textSize="18sp"
             android:textColor="#000"
             android:layout_marginLeft="10dp"
             android:gravity="center_vertical" />
         <ImageView
             android:id="@+id/ivZhuanXiang"
             android:layout_width="30dp"
             android:layout_height="match_parent"
             android:scaleType="centerInside"
             android:src="@drawable/right_arrow_icon"
             android:layout_alignParentRight="true"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="match_parent"
             android:text="领金币，看优惠"
             android:textSize="15sp"
             android:textColor="#000"
             android:gravity="center_vertical"
             android:layout_toLeftOf="@id/ivZhuanXiang"/>
     </RelativeLayout>
 </LinearLayout>

</LinearLayout>