<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rlCartItem"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp">
    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        style="@style/CustomCheckboxTheme"
        android:gravity="center"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:layout_toRightOf="@id/checkBox"
        android:id="@+id/ivGoodsPicture"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/nopic"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"/>
    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="杏仁紧实美肤油"
        android:gravity="center"
        android:layout_toRightOf="@id/ivGoodsPicture"
        android:textSize="20sp"
        android:textColor="#f503d5"/>
    <ImageView
        android:id="@+id/ivAdd"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/add_cart"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/ivGoodsPicture"
        android:layout_below="@id/tvUsername"/>
    <TextView
        android:id="@+id/tvGoodsCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(1)"
        android:textColor="#000"
        android:textSize="20sp"
        android:layout_toRightOf="@id/ivAdd"
        android:layout_below="@id/tvUsername"
        android:layout_marginLeft="10dp"/>
    <ImageView
        android:id="@+id/ivDel"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@mipmap/del_cart"
        android:layout_toRightOf="@id/tvGoodsCount"
        android:layout_below="@id/tvUsername"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"/>
    <TextView
        android:id="@+id/tvGoodPrince"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:text="￥123"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#f205b3"
        android:layout_marginRight="5dp"/>
</RelativeLayout>