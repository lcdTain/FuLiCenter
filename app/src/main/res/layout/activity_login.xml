<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#dfd5d5">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fff">
        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="账户登录"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#000"/>
    </RelativeLayout>
        <EditText
            android:id="@+id/etUsername"
            android:background="#fff"
            android:hint="用户名"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableRight="@drawable/icon_account"
            android:paddingRight="20dp"/>
        <EditText
            android:id="@+id/etPassword"
            android:hint="密码"
            android:background="#fff"
            android:textSize="20sp"
            android:paddingLeft="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:password="true"
            android:drawableRight="@drawable/icon_pwd"
            android:paddingRight="20dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_margin="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tb_btn_login_orange_normal"
        android:text="登录"
        android:textColor="#fff"
        android:textSize="20sp"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="免费注册"
        android:textSize="20sp"
        android:textColor="#f79a04"
        android:background="@drawable/tb_regiser_bg"/>

</LinearLayout>