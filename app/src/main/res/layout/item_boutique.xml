<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/ivBoutique_picture"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"/>
    <TextView
        android:id="@+id/tvBoutique_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="洗发水"
        android:textSize="20sp"
        android:textColor="#00f"
        android:layout_toRightOf="@id/ivBoutique_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:id="@+id/tvBoutique_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="好的洗发水"
        android:textSize="20sp"
        android:textColor="#00f"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ivBoutique_picture"
        android:layout_below="@id/tvBoutique_title" />
    <TextView
        android:id="@+id/tvBoutique_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="非常好的洗发水"
        android:textSize="20sp"
        android:textColor="#00f"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_toRightOf="@id/ivBoutique_picture"
        android:layout_below="@id/tvBoutique_name" />
</RelativeLayout>